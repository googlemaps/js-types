{
  "git": {
    "commitMessage": "chore: release v${version} [skip ci]"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  },
  "plugins": {
    "@release-it/bumper": {
      "in": {
        "file": "VERSION",
        "type": "text/plain"
      },
      "out": {
        "file": "VERSION",
        "type": "text/plain"
      }
    }
  }
}
